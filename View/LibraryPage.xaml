<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E_Raamatud.View.LibraryPage"
             Title="Minu Raamatukogu">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#549082" Offset="0.0" />
            <GradientStop Color="#406780" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <StackLayout Padding="10" Spacing="20">

        <Label Text="Minu Raamatukogu"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding LibraryBooks}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HasShadow="True"
                           CornerRadius="8"
                           Padding="0"
                           BackgroundColor="Transparent"
                           Margin="5">
                        <VerticalStackLayout Padding="5">
                            <Image Source="{Binding Pilt}"
                                   HeightRequest="180"
                                   WidthRequest="120"
                                   Aspect="AspectFill" />
                            <Label Text="{Binding Pealkiri}" TextColor="Black" FontAttributes="Bold" />
                            <Label Text="{Binding Hind, StringFormat='â‚¬ {0:F2}'}" TextColor="Black" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>

</ContentPage>